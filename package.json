{
    "name": "discord-bot",
    "version": "0.0.0",
    "about": "Simple Nodejs DiscordBOT",
    "port": 3000,
    "private": true,
    "scripts": {
        "clean": "rimraf dist/*",
        "setup": "npm install -g pm2 yarn nodemon npm-run-all && yarn run update",
        "update": "npm-run-all \"yarn install\" \"yarn upgrade --latest\"",
        "build": "npm run build-ts && npm run tslint && npm run copy-assets",
        "dev": "nodemon",
        "dev:start": "node --inspect=5858 -r dotenv/config -r ts-node/register ./src/bin/www.ts",
        "start": "npm-run-all \"npm run build \" \"node dist/src/bin/www\"",
        "start-build": "node -r dotenv/config dist/src/bin/www",
        "reload-server": "npm-run-all \"pm2 delete discord-bot || true\" \"pm2 start --name=discord-bot npm -- run start-build \"",
        "server": "npm-run-all \"npm run build \" \"npm run reload-server\"",
        "create-module": "node let create module",
        "test": "jest --setupFiles dotenv/config --passWithNoTests --forceExit",
        "build-ts": "tsc",
        "watch-ts": "tsc -w",
        "tslint": "tslint -c tslint.json -p tsconfig.json",
        "copy-assets": "ts-node copyAssets"
    },
    "dependencies": {
        "babel-polyfill": "^6.26.0",
        "cookie-parser": "~1.4.5",
        "debug": "~4.1.1",
        "discord.js": "^12.1.1",
        "dotenv": "^8.2.0",
        "express": "~4.17.1",
        "http-errors": "~1.7.3",
        "line-reader": "^0.4.0",
        "morgan": "~1.10.0",
        "node-fetch": "^2.6.0",
        "node-persist": "^3.0.5",
        "node-sass": "^4.13.1",
        "pug": "2.0.4",
        "puppeteer": "^2.1.1",
        "request": "^2.88.2",
        "shelljs": "^0.8.3",
        "xlsx": "^0.15.6"
    },
    "devDependencies": {
        "@types/async": "^3.2.0",
        "@types/compression": "1.7.0",
        "@types/dotenv": "^8.2.0",
        "@types/errorhandler": "1.5.0",
        "@types/express": "^4.17.6",
        "@types/jest": "^25.2.1",
        "@types/jquery": "^3.3.34",
        "@types/lodash": "^4.14.118",
        "@types/node": "^13.11.1",
        "@types/node-fetch": "^2.5.6",
        "@types/node-localstorage": "^1.3.0",
        "@types/node-persist": "^3.0.0",
        "@types/puppeteer": "^2.0.1",
        "@types/request": "^2.48.1",
        "@types/request-promise-native": "^1.0.17",
        "@types/shelljs": "^0.8.0",
        "@types/supertest": "^2.0.7",
        "@types/ws": "^7.2.3",
        "concurrently": "^5.1.0",
        "install": "^0.13.0",
        "jest": "^25.3.0",
        "nodemon": "^2.0.3",
        "ts-jest": "^25.3.1",
        "ts-node": "^8.8.2",
        "tslint": "^6.1.1",
        "tslint-config-prettier": "^1.18.0",
        "typescript": "^3.7.5"
    },
    "nodemonConfig": {
        "ignore": [
            "**/*.test.ts",
            "**/*.spec.ts",
            ".git",
            "node_modules"
        ],
        "watch": [
            "src"
        ],
        "exec": "npm run dev:start",
        "ext": "ts"
    }
}
